
   <section class="hero py-16">

       <div class="container mx-auto flex justify-between items-center">
           <div class="w-1/2 ml-12">
               <h6 class="text-lg"><em>Are you hungry ?</em></h6>
               <h1 class="text-6xl font-bold my-3">Don't wait !</h1>
               <button class="btn-primary py-2 px-4 rounded-full text-white">Order Now</button>
            </div>
            <div class="w-1/2">
                <img class="mx-auto" src="img/hero.png" alt="">
            </div>
        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold  mb-8">All Ice creams</h1>

        <div class="grid grid-cols-4 gap-y-16">
            <%icecream.forEach(ice=>{ %>
                <div class="card w-64 p-4">
                    <img class="h-40 mb-6 mx-auto" src="/img/<%=ice.image%>" alt="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg"><%=ice.name%></h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=ice.size%></span>
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">â‚¹<%=ice.price%></span>
                            <button data-icecream="<%=JSON.stringify(ice)%>" class="add-to-cart py-2 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span  class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
           <% })%>
            
           
        </div>
    </section>

